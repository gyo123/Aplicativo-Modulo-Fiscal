<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formbemvindo.Agradecimentos"
    android:background="@drawable/shape_degrade2"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btimposto"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/vermelhorFORTE"
        android:text="INFORMAÇÃO SOBRE IMPOSTOS"
        android:textAllCaps="false"
         />
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btconsultar"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/vermelhorFORTE"
        android:text="CONSULTAR TABELA ISS"
        android:textAllCaps="false"
        />
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btLei116"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/vermelhorFORTE"
        android:text="LEI 116/03 COMENTADA"
        android:textAllCaps="false"
        />
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btNfe"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/vermelhorFORTE"
        android:text="CALCULAR NF-e"
        android:textAllCaps="false"
        />
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btcalcularpresumido"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/vermelhorFORTE"
        android:text="CALCULAR LUCRO PRESUMIDO"
        android:textAllCaps="false"
        />




</LinearLayout>